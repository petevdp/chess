{
  "extends": "../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    // "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2019",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
    "../common/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

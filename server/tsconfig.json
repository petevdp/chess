{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": "../",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2019",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
    "../APIInterfaces/**/*.ts",
    "node_modules/@types"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
